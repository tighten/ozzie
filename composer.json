{
    "name": "tighten/ozzie",
    "description": "A dashboard to manage open source projects.",
    "keywords": [
        "open source",
        "laravel",
        "tighten"
    ],
    "homepage": "https://github.com/tighten/ozzie",
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "ext-json": "*",
        "davaxi/sparkline": "^2.2",
        "erusev/parsedown": "^1.7",
        "graham-campbell/github": "^12.5",
        "guzzlehttp/guzzle": "^7.8",
        "http-interop/http-factory-guzzle": "^1.2",
        "inertiajs/inertia-laravel": "^1.0",
        "laravel/framework": "^11.48",
        "laravel/nova": "4.33.3",
        "laravel/socialite": "^5.11",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.4",
        "league/commonmark": "^2.7",
        "laravel/slack-notification-channel": "^3.0",
        "nesbot/carbon": "^3.0",
        "spatie/laravel-ignition": "^2.4",
        "tightenco/ziggy": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/sail": "^1.29",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "pestphp/pest": "^2.33",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ray": "^1.35",
        "tightenco/duster": "^3.0",
        "laravel/pail": "^1.2.2"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-update-cmd": [
            "@php artisan nova:publish",
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "lint": [
            "vendor/bin/duster lint"
        ],
        "fix": [
            "vendor/bin/duster fix"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    }
}
