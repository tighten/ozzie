{
    "name": "tighten/ozzie",
    "description": "A dashboard to manage open source projects.",
    "keywords": ["open source", "laravel", "tighten"],
    "homepage": "https://github.com/tighten/ozzie",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-gd": "*",
        "davaxi/sparkline": "^1.2",
        "erusev/parsedown": "^1.7",
        "fideloper/proxy": "^4.0",
        "graham-campbell/github": "^10.0",
        "guzzlehttp/guzzle": "^7.2",
        "http-interop/http-factory-guzzle": "^1.0",
        "laravel/framework": "^8.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^3.0",
        "nathanheffley/laravel-slack-blocks": "^2.1",
        "spatie/data-transfer-object": "^2.0",
        "tightenco/duster": "^0.2.0@RC",
        "tightenco/tlint": "^5.0"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "fakerphp/faker": "^1.13",
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "fix": [
            "vendor/bin/php-cs-fixer fix"
        ]
    }
}
